	month = nov,
	year = {2015},
	keywords = {Constraint-based modeling, Resource allocation, Strain design, Systems biology},
	pages = {232--243},
	file = {ScienceDirect Full Text PDF:/home/sfischer/Zotero/storage/UL9V8NP3/Goelzer et al. - 2015 - Quantitative prediction of genome-wide resource al.pdf:application/pdf;ScienceDirect Snapshot:/home/sfischer/Zotero/storage/QXPWR4UY/S1096717615001317.html:text/html}
