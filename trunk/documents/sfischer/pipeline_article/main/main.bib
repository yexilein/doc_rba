	journal = {Appl Environ Microbiol},
	author = {Varma, A and Palsson, B O},
	month = oct,
	year = {1994},
	pages = {3724--3731},
	file = {PubMed Central Full Text PDF:/home/sfischer/Zotero/storage/WRXPQN7A/Varma et Palsson - 1994 - Stoichiometric flux balance models quantitatively .pdf:application/pdf}
